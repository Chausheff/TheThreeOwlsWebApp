@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    @if (SignInManager.IsSignedIn(User))
    {
        <a class="btn btn-info text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Профил на потребителя</a>  
        <a class="btn btn-info text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрирай нов потребител</a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-info mt-2 text-dark">Logout</button>
        </form>
    }
    else
    {
        <a class="btn btn-info text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }