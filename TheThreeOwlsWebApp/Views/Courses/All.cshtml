@model IEnumerable<TheThreeOwlsWebApp.Models.Courses.CourseListingViewModel>

@{
    ViewData["Title"] = "All";
}

<a asp-controller="Courses" asp-action="Add" class="btn btn-primary">Добави Курс</a>
<div class="col-lg-4">
    @foreach (var course in Model)
    {
        <div>
            <img src="@course.Image" alt="@course.Name" />
            <h5>@course.Name</h5>
            <h5>Начало - @course.StartDate</h5>
            <h5>Край -@course.EndDate</h5>
            <h5>Цена - @course.Price лв.</h5>
            <div>
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">Виж още</a>
            </div>

        </div>
    }
</div>