@model TheThreeOwlsWebApp.Models.Blog.BlogListingViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="offset-md-2 col-md-6">@Model.Title</h1>

<div>
    <hr />
    <div class="row">
        <img class="w-100" src="@Model.Image" alt="@Model.Title" />
        <p class="col-sm-10">
            @Html.Raw(Model.Text)
        </p>
    </div>
</div>
<div>
    <div class="card-body">
        <a asp-controller="Blog" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Промени</a>
        <a asp-controller="Blog" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Изтрий</a>
    </div>
</div>