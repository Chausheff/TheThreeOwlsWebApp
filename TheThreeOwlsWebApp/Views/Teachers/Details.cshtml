@model TheThreeOwlsWebApp.Models.Teachers.TeacherListingViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <img class="card-img-top" src="@Model.Picture" alt="@Model.FirstName @Model.LastName">
    <div class="card-body">
        <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
        <p>@Model.Info</p>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="card-body">
            <a asp-controller="Teachers" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Промени</a>
            <a asp-controller="Teachers" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Изтрий</a>
        </div>
    }
    </div>